<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cotización</title>
    <link rel="stylesheet" href="./css/bootstrap-5.1.3-dist/css/bootstrap.css">
</head>
<body>
    <div class="container">
        <div class="text-center">
            <div class="bg-info mw-100">
                <h1 class="p-4">Cotización</h1>
            </div>
                <form class="bg-light" action="/cotizacion" method="post">
                    <div class="row mb-1">
                        <div class="col-4"><label class="form-label fs-5" for="">Valor del automóvil</label></div>
                        <div class="col-4"><label class="form-label fs-5" for="">Porcentaje de pago inicial</label></div>
                        <div class="col-4"><label class="form-label fs-5" for="">Plazos</label></div>
                    </div>
                    <div class="row mb-3 mx-1">
                        <div class="col-4">
                            <input class="form-control" type="number" name="valor" id="valor" required value="<%=valor%>">
                        </div>
                        <div class="col-4">
                            <select class="form-select" name="pInicial" id="pInicial">
                                <option value="10">10%</option>
                                <option value="20">20%</option>
                                <option value="30">30%</option>
                                <option value="50">50%</option>
                                <option value="70">70%</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <select class="form-select" name="plazos" id="plazos">
                                <option value="12">12 Meses</option>
                                <option value="24">24 Meses</option>
                                <option value="36">36 Meses</option>
                                <option value="48">48 Meses</option>
                                <option value="60">60 Meses</option>
                                <option value="72">72 Meses</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="d-grid gap-2 col-5 mx-auto">
                            <button class="btn btn-outline-dark fs-5 mb-3" type="submit">Realizar cotización</button>
                        </div>
                    </div>
                    
                </form>
            
            
            <%
                let pagoInicial = 0;
                let totFin = 0;
                let pagoMen = 0;
            if(valor!=null){
                pagoInicial = valor * (pInicial/100);
                totFin = valor - pagoInicial;
                pagoMen = totFin / plazos;
            }%>
            <div class="bg-warning fs-5">
                <div class="row mt-3">
                    <h3>Resumen de la cotización</h3>
                </div>
                <div class="row">
                    <div class="col">Valor del automóvil</div>
                    <div class="col">Porcentaje de pago inicial</div>
                    <div class="col">Plazos</div>
                </div>
                <div class="row mb-3">
                    <div class="col">$<%=valor%></div>
                    <div class="col"><%=pInicial%>%</div>
                    <div class="col"><%=plazos%> Meses</div>
                </div>
                <div class="row">
                    <div class="col">Pago inicial</div>
                    <div class="col">Total a financiar</div>
                    <div class="col">Pago mensual</div>
                </div>
                <div class="row pb-3">
                    <div class="col">$<%=pagoInicial%></div>
                    <div class="col">$<%=totFin%></div>
                    <div class="col">$<%=pagoMen%></div>
                </div>
            </div> 
        </div>
            
    </div>
</body>
</html>